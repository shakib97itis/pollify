<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Poll Application</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-blue-500 shadow-md sticky top-0 z-10">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <a href="/" class="text-2xl font-bold text-white">Pollify</a>
            <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-white">All Polls</h2>
            <div>
                <a href="/create">
                    <button
                        class="bg-green-500 text-white font-medium py-2 px-4 sm:px-6 rounded-md hover:bg-green-600 focus:ring-2 focus:ring-green-400">
                        Create New Poll
                    </button>
                </a>
            </div>
        </div>
    </header>

    <!-- Polls List -->
    <div class="container mx-auto py-8 px-4">
        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Loop through Polls -->
            <% for (let p of polls) { %>
                <li class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
                    <a href="/vote/<%= p._id %>" class="block">
                        <h3 class="text-lg sm:text-xl font-semibold text-gray-800 truncate">
                            <%= p.title %>
                        </h3>
                    </a>
                    <p class="text-sm text-gray-600 mt-2 truncate">
                        <%= p.description || "No description available." %>
                    </p>
                    <div
                        class="flex flex-col sm:flex-row justify-between items-center mt-4 space-y-2 sm:space-y-0 sm:space-x-4">
                        <a href="/vote/<%= p._id %>"
                            class="bg-blue-500 text-white font-medium py-2 px-4 rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400">
                            Vote
                        </a>
                        <a href="/result/<%= p._id %>"
                            class="bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md hover:bg-gray-400 focus:ring-2 focus:ring-gray-300">
                            See Results
                        </a>
                    </div>
                </li>
                <% } %>
        </ul>
    </div>
</body>

</html>