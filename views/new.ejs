    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Poll Application</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <header class="bg-blue-500 text-white shadow-md">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <a href="/" class="text-2xl font-bold">Pollify</a>
            <h2 class="text-3xl font-bold text-center text-white">All Polls</h2>
            <!-- Create New Poll Button -->
            <div class="text-center">
                <a href="/create">
                    <button
                        class="bg-green-500 text-white font-medium py-2 px-6 rounded-md hover:bg-green-600 focus:outline-none">
                        Create New Poll
                    </button>
                </a>
            </div>
        </div>
    </header>

