<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <header class="bg-blue-500 text-white shadow-md">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <a href="/" class="text-2xl font-bold">Pollify</a>
            <h2 class="text-3xl font-bold text-center text-white">Poll Result</h2>
            <!-- Create New Poll Button -->
            <div class="text-center">
                <a href="/">
                    <button
                        class="bg-green-500 text-white font-medium py-2 px-6 rounded-md hover:bg-green-600 focus:outline-none">
                        Home
                    </button>
                </a>
            </div>
        </div>
    </header>

    <div class="min-h-screen bg-gray-100 py-12">
        <div class="max-w-3xl mx-auto bg-white shadow-md rounded-lg p-6">
            <!-- Poll Title -->
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Poll Results: <%= poll.title %>
            </h2>
            <p class="text-gray-600 mb-6">Description: <%= poll.description %>
            </p>

            <!-- Results -->
            <div class="space-y-4">
                <% poll.options.forEach(option=> { %>
                    <div>
                        <!-- Option Name and Percentage -->
                        <div class="flex items-center justify-between">
                            <span class="text-gray-700 font-medium">
                                <%= option.name %>
                            </span>
                            <span class="text-gray-500">
                                <%= Math.round((option.votes / poll.totalVotes) * 100) || 0 %>%
                            </span>
                        </div>
                        <!-- Progress Bar -->
                        <div class="w-full bg-gray-200 h-3 rounded-md">
                            <div class="bg-blue-500 h-3 rounded-md"
                                style="width: <%= (option.votes / poll.totalVotes) * 100 || 0 %>%;"></div>
                        </div>
                    </div>
                    <% }); %>

                        <!-- Total Votes -->
                        <div class="mt-6 text-gray-600">
                            <strong>Total Votes:</strong>
                            <%= poll.totalVotes %>
                        </div>
            </div>
        </div>
    </div>


</body>

</html>